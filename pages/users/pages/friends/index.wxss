/* pages/users/pages/mine/friends/index.wxss */
page{
    background: #ebebeb;
}
.friend-main-top{
    height: 495rpx;
}
.friends-top{
    width: 100%;
    height: 495rpx;
    position: absolute;
    z-index: -1;
}
.friends-top-icon{
    margin-top:15rpx;
    margin-left: 25rpx;
    width: 120rpx;
    height: 120rpx;
    z-index: 19;
    border-radius: 6rpx;
    border: 6rpx solid #fff;
}
.friends-list{
    margin-top: 20rpx;
    background-color: #fff;
    padding:0 20rpx 0 30rpx;
}
.friend-item{
    padding:20rpx 0 15rpx 0;
    height: 145rpx;
    border-bottom: 1rpx solid #ddd;
}
.item-image{
    float: left;
    margin-right: 36rpx;
}
.friend-new-info{
    width: 30rpx !important;
    height: 30rpx !important;
    margin-top:-10rpx;
    margin-left: -13rpx;
    position: absolute;
}
.item-image image{
    height: 140rpx;
    width: 140rpx;
}
.item-nickname{
    float: left;
    height: 140rpx;
    line-height: 140rpx;
}
.item-info{
    float:right;
    height: 140rpx;
    line-height: 140rpx;
    padding-right: 30rpx;
}